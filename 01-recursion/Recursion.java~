public class Recurssion {
    public int fact(int n){
	if (n > 1){
	    return n * fact(n - 1);
	}
	else{
	    return 1;
	}
    }
    public int fib(n){
	if (n > 1){
	    return fib(n - 1) + fib(n - 2);
	}
	else if (n == 1){
	    return 1;
	}
	else {
	    return 0;
	}
    }
    public int len(String s){
	if (!s.equals("")){
	    return 1 + len(s.subString(1));
	}
	else {
	    return 0;
	}
    }
    public int count(String s, char c){
	if (!s.equals("")){
	    if (s.charAt(0) == c){
		return 1 + len(s.subString(1));
	    }
        }
	else {
	    return 0;
        }
    }

}